<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.abigovor.models.Role" table="role" lazy="false">
        <meta attribute="class-description">
            This class contains the use detail.
        </meta>
        <id name="id" type="int" column="id">
            <!-- Указываем что, используется генератор на уровне базы данных -->
            <generator class="identity"/>
        </id>

        <property name="name" column="name_of_role" type="string"/>
        <property name="permission" column="permission" type="string"/>
    </class>
</hibernate-mapping>