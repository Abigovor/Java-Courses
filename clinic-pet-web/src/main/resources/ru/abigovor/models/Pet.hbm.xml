<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.abigovor.models.Pet" table="pet" lazy="false">
        <meta attribute="class-description">
            This class contains the use detail.
        </meta>
        <id name="id" type="int" column="uid">
            <!-- Указываем что, используется генератор на уровне базы данных -->
            <generator class="identity"/>
        </id>

        <property name="name" column="nick" type="string"/>
        <many-to-one name="ru.abigovor.models.Client" column="client_id" class="ru.abigovor.models.Client" />
    </class>
</hibernate-mapping>